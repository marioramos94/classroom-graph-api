{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Graphql Docker: Attach to node",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "address": "localhost",
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/usr/src/app",
            "protocol": "inspector",
            "sourceMapPathOverrides": {
                "/usr/src/app/*": "${workspaceRoot}/*",
            },
            "restart": true,
        },
    ]
}